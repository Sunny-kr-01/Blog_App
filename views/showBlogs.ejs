<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= blog.title %>
        </title>
</head>

<body>

    <%- include('./partials/nav') %>

        <div class="container mt-4">

            <!-- Blog Cover Image -->
            <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="img-fluid rounded mb-3"
                style="max-height: 450px; object-fit: cover; width: 100%;">

            <!-- Blog Title -->
            <h1 class="fw-bold">
                <%= blog.title %>
            </h1>

            <!-- Blog Meta -->
            <div class="text-muted mb-3">
                <% if (blog.createdBy.fullName) { %>
                    <img src="<%= blog.createdBy.profileImageURL %>" width="38" height="38" class="rounded-circle me-2"
                        style="object-fit: cover;">

                    By <span class="fw-semibold">
                        <%= blog.createdBy.fullName %>
                    </span>
                    <% } %>
                        <% if (blog.createdAt) { %>
                            â€¢ <%= blog.createdAt.toDateString ? blog.createdAt.toDateString() : blog.createdAt %>
                                <% } %>
            </div>

            <!-- Blog Content -->
            <pre class="fs-5" style="white-space: pre-line;">
            <%= blog.body %>
        </pre>

            <!-- Buttons -->
            <div class="mt-3">
                <a href="/" class="btn btn-secondary">Back</a>
                <% if (user && user._id==blog.userId) { %>
                    <a href="/blog/<%= blog._id %>/edit" class="btn btn-primary">Edit</a>
                    <a href="/blog/<%= blog._id %>/delete" class="btn btn-danger">Delete</a>
                    <% } %>
            </div>

        </div>

        <%- include('./partials/scripts') %>
</body>

</html>