<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= blog.title %>
        </title>
</head>

<body>

    <%- include('./partials/nav') %>

        <div class="container mt-4">

            <!-- Blog Cover Image -->
            <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="img-fluid rounded mb-3"
                style="max-height: 450px; object-fit: cover; width: 100%;">

            <!-- Blog Title -->
            <h1 class="fw-bold">
                <%= blog.title %>
            </h1>

            <!-- Blog Meta -->
            <div class="text-muted mb-3">
                <% if (blog.createdBy.fullName) { %>
                    <img src="<%= blog.createdBy.profileImageURL %>" width="38" height="38" class="rounded-circle me-2"
                        style="object-fit: cover;">

                    By <span class="fw-semibold">
                        <%= blog.createdBy.fullName %>
                    </span>
                    <% } %>
                        <% if (blog.createdAt) { %>
                            â€¢ <%= blog.createdAt.toDateString ? blog.createdAt.toDateString() : blog.createdAt %>
                                <% } %>
            </div>

            <!-- Blog Content -->
            <pre class="fs-5" style="white-space: pre-line;">
            <%= blog.body %>
        </pre>

            <!-- Buttons -->
            <div class="mt-3">
                <a href="/" class="btn btn-secondary">Back</a>
                <% if (user && user._id==blog.userId) { %>
                    <a href="/blog/<%= blog._id %>/edit" class="btn btn-primary">Edit</a>
                    <a href="/blog/<%= blog._id %>/delete" class="btn btn-danger">Delete</a>
                    <% } %>
            </div>

        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Comments</h5>

                <% if (comments.length===0) { %>
                    <p class="text-muted">No comments yet. Be the first!</p>
                    <% } %>

                        <% comments.forEach(c=> { %>
                            <div class="d-flex gap-2 mb-3">

                                <img src="<%= c.user.profileImageURL %>" width="36" height="36" class="rounded-circle"
                                    style="object-fit: cover;">

                                <div class="flex-grow-1">
                                    <div>
                                        <strong>
                                            <%= c.user.fullName %>
                                        </strong>
                                        <small class="text-muted ms-1">
                                            <%= c.createdAt.toLocaleDateString('en-us', { month:"short", day:"numeric",
                                                year:"numeric" }) %>
                                        </small>
                                    </div>
                                    <div>
                                        <%= c.content %>
                                    </div>
                                </div>

                            </div>
                            <% }) %>
            </div>
        </div>


        <% if (locals.user) { %>
         <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-8 col-lg-6">

                <form method="POST" action="/blog/comment/<%= blog._id %>">
                    <div class="input-group">
                        <input type="text" class="form-control" name="content" placeholder="Write a comment..."
                            required>
                        <button class="btn btn-primary btn-sm">Post</button>
                    </div>
                </form>

            </div>
        </div>
        <% } %>


        <%- include('./partials/scripts') %>
</body>

</html>